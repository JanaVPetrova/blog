.page-header
%h1= t('.listing_posts')
%table.table.table-striped
  %thead
    %tr
      %th=t '.title'
      %th=t '.text'
      %th=t '.state'
      %th=t '.validation_state'
      %th=t '.actions'
  %tbody
    - @posts.each do |post|
      %tr
        %td= post.title
        %td= post.text
        %td= post.state
        %td= post.validation_state
        %td
          = link_to t('.show'), post_path(post), :class => 'btn btn-mini'
          = link_to t('.edit'), edit_post_path(post), :class => 'btn btn-mini'
          - if post.restored?
            = link_to t('.destroy'), post_path(post), method: :delete, data: { :confirm => t('.confirm') }, class: 'btn btn-mini btn-danger'
= link_to t('.new'), new_post_path, :class => 'btn btn-primary'
= paginate @posts