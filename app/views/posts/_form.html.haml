.page-header
= simple_form_for @post, :html => { :class => 'form-horizontal' } do |f|
    = f.input :title
    = f.input :text
    = f.input :state_event, as: :state_event, wrapper: :no_label
    = f.input :validation_state_event, as: :state_event, wrapper: :no_label
    = f.button :submit, :class => 'btn-primary'
    = submit_tag t('.cancel'), :type => :reset, :class => "btn btn-danger"