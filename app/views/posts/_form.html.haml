= simple_form_for [@user, @post], :html => { :class => 'form-horizontal' } do |f|
    = f.input :title
    = f.input :text
    = f.input :state_event, as: :state_event
    = f.input :validation_state_event, as: :state_event
    = f.button :submit, :class => 'btn-primary'
    = submit_tag 'Cancel', :type => :reset, :class => "btn btn-danger"