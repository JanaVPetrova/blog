= simple_form_for @post, :html => { :class => 'form-horizontal' } do |f|
  = f.input :title
  = f.input :text, input_html: {class: 'ckeditor', toolbar: 'Easy'}
  = f.input :state_event, as: :state_event
  = f.input :validation_state_event, as: :state_event
  = f.simple_fields_for :comments do |comment|
    = render 'comment_fields', :f => comment
  = f.button :submit, :class => 'btn-primary'
  = submit_tag t('.cancel'), :type => :reset, :class => "btn btn-danger"