%h1= t('.listing_posts')
/ = render 'filters'
%table.table.table-striped
  %thead
    %tr
      %th= ham(:post, :subject)
      %th= ham(:post, :title)
      %th= ham(:post, :actions)

  %tbody
    - @posts.each do |post|
      %tr
        %td= post.subject.title
        %td= post.title
        %td= link_to t('show'), post_path(post), :class => 'btn btn-mini'
= paginate @posts