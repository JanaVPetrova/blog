%h1= t('.listing_users')
%table.table.table-striped
  %thead
    %tr
      %th= ham(:user, :login)
      %th= ham(:user, :actions)
  %tbody
    - @users.each do |user|
      %tr
        %td= user.full_name
        %td
          = link_to t('.show'), user_path(user), :class => 'btn btn-mini'
          = link_to t('.posts'), user_path(user), :class => 'btn btn-mini'
          = link_to t('.edit'), edit_user_path(user), :class => 'btn btn-mini'
          = link_to t('.destroy'), user_path(user), :method => :delete, :data => { :confirm => t('.confirm') }, :class => 'btn btn-mini btn-danger'