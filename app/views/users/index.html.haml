%h1
  =t '.listing_users'
%table{:class => "table table-bordered table-striped" }
  %tr
    %th=t '.login'
    %th=t '.actions'

  - @users.each do |user|
    %tr
      %td= user.login
      %td
        = link_to t('.show', :default => t("helpers.links.show")), user_path(user), :class => 'btn btn-mini'
        = link_to t('.posts'), user_posts_path(user), :class => 'btn btn-mini'
        = link_to t('.edit'), edit_user_path(user), :class => 'btn btn-mini'
        = link_to t('.destroy', :default => t("helpers.links.destroy")), user_path(user), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'
= link_to t('.new', :default => t("helpers.links.new")), new_user_path, :class => 'btn btn-primary'